{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@components": ["./src/components"],
      "@pages": ["./src/pages"],
      "@utils/*": ["./src/utils/*"]
    },
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  }
}
